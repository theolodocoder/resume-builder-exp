# Resume Builder Server Configuration
# ====================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Log Level
# Options: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ============================================================================
# RESUME PARSER CONFIGURATION
# ============================================================================

# Redis Configuration (for BullMQ queue)
REDIS_URL=redis://localhost:6379

# Worker Configuration
# Number of concurrent jobs to process
WORKER_CONCURRENCY=2

# File Upload Configuration
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for resume upload
ALLOWED_FILE_TYPES=pdf,docx,doc,jpg,jpeg,png,gif,bmp

# Database Configuration
# SQLite database location (relative to server root)
DATABASE_PATH=./data/resume_parser.db

# ============================================================================
# PDF/DOCX GENERATION CONFIGURATION
# ============================================================================

# Puppeteer Configuration for PDF generation
PUPPETEER_BROWSER_PATH=
PUPPETEER_TIMEOUT=30000

# Template Configuration
TEMPLATE_DIR=./templates
DEFAULT_TEMPLATE=professional

# ============================================================================
# API CONFIGURATION
# ============================================================================

# CORS Settings
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# API Documentation
API_VERSION=1.0.0
API_TITLE=Resume Builder API

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable request logging
DEBUG_LOGGING=false
